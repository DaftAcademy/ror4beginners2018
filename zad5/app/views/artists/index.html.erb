<div class="container">
  <%= link_to 'Add new artist', new_artist_url, class: 'btn btn-success pull-right' %>
  <h2>Artists Table</h2>
 
  <table class="table">
    <thead>
      <tr>
        <th class="text-left">Artists</th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @artists.each do |artist| %>
        <tr>
          <td class="text-left">
            <%= artist.name %>
          </td>
          <td class="text-right">
            <%= link_to 'show', artist_path(artist), class: 'btn btn-success' %>
            <%= link_to 'edit', edit_artist_path(artist), class: 'btn btn-warning' %>
            <%= link_to 'remove', artist_path(artist), method: :delete, class: 'btn btn-danger'  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
