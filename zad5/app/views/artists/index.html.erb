<div class="cintainer">
  <%= link_to 'Add new artist', new_artist_path, class: 'btn' %>
  <h2>Artist Table</h2>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @artists.each do |artist| %>
        <tr>
          <td><%= artist.name %></td>
          <td class="text-right">
            <%= link_to 'edit', edit_artist_path(artist), class: 'btn' %>
            <%= link_to 'remove', artist_path(artist), method: :delete, class: 'btn' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
