<div class="container">
<%= link_to 'Add new artist', new_artist_url, class: 'btn btn-success pull-right' %>
  <h2>Artists Table</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>      
      </tr>
    </thead>
    <tbody>
      <% @artists.each do |artist| %>
        <tr>
          <td><%=link_to "#{artist.name}", artist_url(artist) %></td>
          <td class="text-right">
          </td>
          <td class="text-right">
            <%= link_to 'edit', edit_artist_url(artist), class: 'btn btn-warning' %>
            <%= link_to 'remove', artist_url(artist), method: :delete, class: 'btn btn-danger'  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
