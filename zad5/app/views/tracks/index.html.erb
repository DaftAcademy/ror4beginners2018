<div class="container">
  <%= link_to 'Add new track', new_track_url, class: 'btn btn-success pull-right' %>
  <h2>Tracks Table</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th class="text-center">Artists</th>
        <th class="text-center">Playlists</th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tracks.each do |track| %>
        <tr>
          <td><%= track.title %></td>
          <td class="text-center">
            <%= track.artist.name %>
          </td>
          <td class="text-center"></td>
          <td class="text-right">
            <%= link_to 'edit', '#', class: 'btn btn-warning' %>
            <%= link_to 'remove', '#', class: 'btn btn-danger'  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
