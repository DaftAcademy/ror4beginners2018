<h2>Tracks Table</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th class="text-center">Artists</th>
        <th class="text-center">Playlists</th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>        
        <% tracks.each do |track| %>
          <tr>
            <td><%= track.title %></td>
            <td class="text-center">
              <%= link_to track.artist.name, track.artist %>
            </td>
            <td class="text-center">
              <% track.playlists.each do |playlist| %>
                <%= link_to playlist.title, playlist, class: 'btn btn-primary' %>
              <% end %>
            </td>
            <td class="text-right">
              <%= link_to 'edit', edit_track_path(track), class: 'btn btn-warning' %>
              <%= link_to 'remove', track_path(track), method: :delete, class: 'btn btn-danger' %>
            </td>
          </tr>
          <% end %>
    </tbody>
  </table>