<% content_for :header do %>
<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Browse the products!
      </h1>
    </div>
  </div>
</section>
<% end %>

<div class="product-index-grid">
  <% @products.each do |product| %>
    <div class="product border-light">
      <%= link_to image_tag(product.image_url(:thumb)), product %>
    </div>
  <% end %>
</div>