<h1 class="text-center"><%= @customer.name %>'s products</h1>
<table class="table">
  <thead>
    <tr>
      <th class="text-center">Product Name</th>
      <th class="text-center">Product Price</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |p| %>
      <tr>
        <td class="text-center"><%= p.name %></td>
        <td class="text-center"><%= p.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>