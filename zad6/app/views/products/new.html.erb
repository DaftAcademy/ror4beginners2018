<%= content_for :header do %>
<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Sell your product
      </h1>
    </div>
  </div>
</section>
<% end %>

<%= render 'form', product: @product %>

<% if @product.errors.messages.empty? %>
<% else %>
<% @product.errors.messages.each do |msg| %>
  <p><%= msg%></p>
  <% end %>
<% end %>

<%= link_to 'Back', products_path %>
